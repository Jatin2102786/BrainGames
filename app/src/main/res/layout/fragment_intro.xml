<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <!-- Game Icon Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imageViewGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="20dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Game Name -->
        <TextView
            android:id="@+id/gameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neut"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:letterSpacing="0.02"
            tools:text="Game Name" />

        <!-- Best Score Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <!-- Trophy Icon with Circular Background -->
                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="#FEF3C7"
                    android:gravity="center"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/trophy"
                        android:layout_gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏆 Best Score"
                        android:fontFamily="@font/neut"
                        android:textSize="16sp"
                        android:textColor="#6B7280"
                     />

                    <TextView
                        android:id="@+id/bestScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,250"
                        android:fontFamily="@font/neut"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginTop="4dp"
                        tools:text="1,250" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Decorative Divider -->
        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_marginVertical="20dp"
            android:background="#E5E7EB" />

        <!-- Score Statistics Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Statistics"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/neut"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp" />

            <!-- Positive Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F0FDF4"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="50dp"
                        android:background="#10B981"
                        android:layout_marginEnd="20dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="✅ Positive Score"
                            android:fontFamily="@font/neut"
                            android:textSize="16sp"
                            android:textColor="#059669"
                           />

                        <TextView
                            android:id="@+id/positiveScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="850"
                            android:fontFamily="@font/neut"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#047857"
                            android:layout_marginTop="6dp"
                            tools:text="850" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📈"
                        android:textSize="24sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Negative Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FEF2F2"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="50dp"
                        android:background="#EF4444"
                        android:layout_marginEnd="20dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="❌ Negative Score"
                            android:fontFamily="@font/neut"
                            android:textSize="16sp"
                            android:textColor="#DC2626"
                             />

                        <TextView
                            android:id="@+id/negativeScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="245"
                            android:fontFamily="@font/neut"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#B91C1C"
                            android:layout_marginTop="6dp"
                            tools:text="245" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📉"
                        android:textSize="24sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>