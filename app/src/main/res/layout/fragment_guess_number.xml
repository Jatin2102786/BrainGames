<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFACD"
    android:windowSoftInputMode="stateVisible|adjustResize"
    tools:context=".GuessNumber.GuessNumberFragment">

    <!-- Guidelines for responsive design -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <!-- Vertical guidelines for content centering -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="0dp" />

    <!-- Top Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="@color/glassmorphism_border"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="@id/guideVEnd"
        app:layout_constraintStart_toStartOf="@id/guideVStart"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neut"
                android:letterSpacing="0.02"
                android:text="23,233"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:minWidth="60dp" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@drawable/custom_thumb"
                android:splitTrack="false" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neut"
                android:letterSpacing="0.02"
                android:text="02:34"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:minWidth="50dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

<!--    <com.google.android.material.card.MaterialCardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        app:layout_constraintTop_toTopOf="@id/guideH10"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/guideH40"-->
<!--        android:layout_margin="12dp"-->
<!--        />-->

    <!-- Middle Card -->


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/numberCard"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:textSize="44sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        tools:text="Watch Number"
        android:fontFamily="@font/neut"
        />


    <ImageView
        android:id="@+id/thumbs_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:src="@drawable/thumbs_up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="12dp"
        android:translationZ="12dp"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/numberCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        app:strokeColor="@color/white"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/guideH10"
        app:layout_constraintBottom_toBottomOf="@id/guideH40"
        >

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/glassmorphism_border"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/guideH10"
        app:layout_constraintBottom_toBottomOf="@id/guideH40"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/numbers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="8dp"
            android:autoSizeMaxTextSize="54sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeTextType="uniform"
            android:textSize="44sp"
            android:fontFamily="@font/neut"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/movePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neut"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:text="+150"
        tools:visibility="visible" />

    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4A90E2"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#764ba2"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#F54927"
        android:alpha="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="150dp"
        android:layout_marginStart="20dp" />

    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#4A90E2"
        android:alpha="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="80dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/questionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:fontFamily="@font/neut"
        android:textAlignment="center"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="@id/guideH10"
        app:layout_constraintBottom_toBottomOf="@id/guideH40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="234"

        />

</androidx.constraintlayout.widget.ConstraintLayout>


